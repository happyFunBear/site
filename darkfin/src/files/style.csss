hr {
    border: 3px solid rgb(192, 192, 192);
    border-bottom-color: rgb(155, 155, 155); 
    border-radius: 4px;
    margin: 2em 20px;
    /* box-shadow:  0 3px 4px grey; */
}
img {
    margin: 1em auto;
    display: block;
    box-shadow: 0 5px 10px #666;
    max-width: 100%; /* calc(100v - 130px); */
}

.journal {
    max-width:500px;
    background-color: #ececec;
    margin: 1em auto;
}