body {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 1em;
    min-height: 100vh;
    background-color: paleturquoise;
}
p {
    margin-bottom: .5em;
}
.wrapper {
    position: relative;
    margin: 2em 4em;
    background-color: #fff;
    padding: 2em;
}
.stage {
    color: #777;
    font-size: .9em;
    margin: 1.5em 2em;
}

.actor {
    display: block;
    margin: 0 auto .25em auto;
    font-weight: bold;
}

h1, h2 {
    color: #fff;
    text-shadow: 0 0 8px #00f, 0 0 16px #00f;
    text-align: center;
}
@media screen and (max-width: 550px) {
    .actor {
        text-align: center;
    }
    .wrapper {
        margin: 1em;
        padding: 1em .5em;
    }
}
@media screen and (max-width: 767px) {
    img {
        display: none !important;
    }
}
@media screen and (min-width: 550px) and (max-width: 768px) {
    .wrapper {
        margin: 2em 3em;
        padding: 1.5em;
    }
}

